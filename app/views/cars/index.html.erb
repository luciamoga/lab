<p id="notice"><%= notice %></p>

<h1>Listing Cars</h1>
<div class="col-md-4">
<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>Hp</th>
      <th>Model</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.color %></td>
        <td><%= car.hp %></td>
        <td><%= car.model %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %><span class="glyphicon glyphicon-edit"></span></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %><span class="glyphicon glyphicon-remove"></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
